<script>
  function formatCurrency(amount) {
    return new Intl.NumberFormat("es-AR", {
      style: "currency",
      currency: "ARS",
      minimumFractionDigits: 2,
      maximumFractionDigits: 2,
    }).format(amount);
  }

  document.addEventListener("DOMContentLoaded", function () {
    const formatMoney = (moneyElement) => {
      const moneyText = moneyElement.textContent.replace(/[^0-9]/g, "");
      const formattedMoney = formatCurrency(parseFloat(moneyText));
      moneyElement.textContent = formattedMoney;
    };

    document
      .querySelectorAll(".profile-money, .money, .money-header")
      .forEach(formatMoney);
  });
</script>
